@using GrocerEWebApplication.Models
@model IEnumerable<Stock>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/stylesheet.css">
    <title>Products Page</title>
</head>
<body>
    <div>
        <ul>
            <li><a href="~/Views/Home/Index.cshtml">Home</a></li>
            <li><a href="~/Views/Home/About.cshtml">About</a></li>
            <li><a href="~/Views/Home/Inventory.cshtml">Inventory</a></li>
            <li><a href="~/Views/Home/Login.cshtml">Login</a></li>
            <li><a href="~/Views/Home/ShoppingCart.cshtml">Shopping Cart</a></li>
            <li>@Html.ActionLink("Cart", "ShoppingCart")</li>
        </ul>
    </div>
    <div>
        <h1>Browse all Products</h1>
        <div>

            <ul>
@using (Html.BeginForm("AddToCart", "Home"))
{
    foreach (Stock stockItem in Model)
    {
                    <li class="inventoryItem">
                        
                            <h2>Name: @stockItem.Item.Name</h2>
                            <p>ID: @stockItem.Item.ID</p>
                            <p>Price: @stockItem.Item.Price.ToString("c")</p>
                            <p>In Stock: @stockItem.Quantity</p>

                            <input type="submit" value="Add To Cart" name="@stockItem.Item.ID.ToString()" id="@stockItem.Item.ID.ToString()" />
                        
                    </li>
    }
}
            </ul>

        </div>
    </div>
</body>
</html>